#!/usr/bin/env tclsh
package require tcltest
namespace import ::tcltest::*
source testHelpers.tcl

############################################################
source "poker.tcl"

test poker-1 "single hand always wins" -body {
    bestHands {
        {4S 5S 7H 8D JC}
    }
} -returnCodes ok -match orderedLists -result {
    {4S 5S 7H 8D JC}
}

