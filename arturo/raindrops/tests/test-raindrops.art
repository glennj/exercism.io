import.version:3.0.0 {unitt}! 
import {src/raindrops}!

describe "Raindrops" [
    it "the sound of 1 is 1" [
        expects.be:'equal? @[
            "1"
            raindrops 1
        ]
    ]

    it "the sound for 3 is Pling" [
        expects.be:'equal? @[
            "Pling"
            raindrops 3
        ]
    ]

    it "the sound for 5 is Plang" [
        expects.be:'equal? @[
            "Plang"
            raindrops 5
        ]
    ]

    it "the sound of 7 is Plong" [
        expects.be:'equal? @[
            "Plong"
            raindrops 7
        ]
    ]

    it "the sound for 6 is Pling as it has a factor of 3" [
        expects.be:'equal? @[
            "Pling"
            raindrops 6
        ]
    ]

    it "2 to the power 3 does not make a raindrop sound as 3 is the exponent not the base" [
        expects.be:'equal? @[
            "8"
            raindrops 8
        ]
    ]

    it "the sound of 9 is Pling as it has a factor of 3" [
        expects.be:'equal? @[
            "Pling"
            raindrops 9
        ]
    ]

    it "the sound for 10 is Plang as it has a factor of 5" [
        expects.be:'equal? @[
            "Plang"
            raindrops 10
        ]
    ]

    it "the sound for 14 is Plong as it has a factor of 7" [
        expects.be:'equal? @[
            "Plong"
            raindrops 14
        ]
    ]

    it "the sound for 15 is PlingPlang as it has factors 3 and 5" [
        expects.be:'equal? @[
            "PlingPlang"
            raindrops 15
        ]
    ]

    it "the sound for 21 is PlingPlong as it has factors 3 and 7" [
        expects.be:'equal? @[
            "PlingPlong"
            raindrops 21
        ]
    ]

    it "the sound for 25 is Plang as it has a factor of 5" [
        expects.be:'equal? @[
            "Plang"
            raindrops 25
        ]
    ]

    it "the sound for 27 is Pling as it has a factor of 3" [
        expects.be:'equal? @[
            "Pling"
            raindrops 27
        ]
    ]

    it "the sound for 35 is PlangPlong as it has factors 5 and 7" [
        expects.be:'equal? @[
            "PlangPlong"
            raindrops 35
        ]
    ]

    it "the sound for 49 is Plong as it has a factor of 7" [
        expects.be:'equal? @[
            "Plong"
            raindrops 49
        ]
    ]

    it "the sound for 52 is 52" [
        expects.be:'equal? @[
            "52"
            raindrops 52
        ]
    ]

    it "the sound for 105 is PlingPlangPlong as it has factors 3, 5 and 7" [
        expects.be:'equal? @[
            "PlingPlangPlong"
            raindrops 105
        ]
    ]

    it "the sound for 3125 is Plang as it has a factor of 5" [
        expects.be:'equal? @[
            "Plang"
            raindrops 3125
        ]
    ]
]
