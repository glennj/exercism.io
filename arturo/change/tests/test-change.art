import.version:3.0.0 {unitt}! 
import {src/change}!

describe "Change" [
    it "change for 1 cent" [
        expects.be:'equal? @[
            [1]
            findFewestCoins [1 5 10 25] 1
        ]
    ]

    it "single coin change" [
        expects.be:'equal? @[
            [25]
            findFewestCoins [1 5 10 25 100] 25
        ]
    ]

    it "multiple coin change" [
        expects.be:'equal? @[
            [5 10]
            findFewestCoins [1 5 10 25 100] 15
        ]
    ]

    it "change with Lilliputian Coins" [
        expects.be:'equal? @[
            [4 4 15]
            findFewestCoins [1 4 15 20 50] 23
        ]
    ]

    it "change with Lower Elbonia Coins" [
        expects.be:'equal? @[
            [21 21 21]
            findFewestCoins [1 5 10 21 25] 63
        ]
    ]

    it "large target values" [
        expects.be:'equal? @[
            [2 2 5 20 20 50 100 100 100 100 100 100 100 100 100]
            findFewestCoins [1 2 5 10 20 50 100] 999
        ]
    ]

    it "possible change without unit coins available" [
        expects.be:'equal? @[
            [2 2 2 5 10]
            findFewestCoins [2 5 10 20 50] 21
        ]
    ]

    it "another possible change without unit coins available" [
        expects.be:'equal? @[
            [4 4 4 5 5 5]
            findFewestCoins [4 5] 27
        ]
    ]

    it "a greedy approach is not optimal" [
        expects.be:'equal? @[
            [10 10]
            findFewestCoins [1 10 11] 20
        ]
    ]

    it "no coins make 0 change" [
        expects.be:'equal? @[
            []
            findFewestCoins [1 5 10 21 25] 0
        ]
    ]

    it "error testing for change smaller than the smallest of coins" [
        expects.be:'null? @[
            findFewestCoins [5 10] 3
        ]
    ]

    it "error if no combination can add up to target" [
        expects.be:'null? @[
            findFewestCoins [5 10] 94
        ]
    ]

    it "cannot find negative change values" [
        expects.be:'null? @[
            findFewestCoins [1 2 5] neg 5
        ]
    ]
]
