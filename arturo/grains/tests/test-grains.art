import.version:3.0.0 {unitt}! 
import {src/grains}!

describe "Grains" [
    it "grains on square 1" [
        expects.be:'equal? @[1 square 1]
    ]

    it "grains on square 2" [
        expects.be:'equal? @[2 square 2]
    ]

    it "grains on square 3" [
        expects.be:'equal? @[4 square 3]
    ]

    it "grains on square 4" [
        expects.be:'equal? @[8 square 4]
    ]

    it "grains on square 16" [
        expects.be:'equal? @[32768 square 16]
    ]

    it "grains on square 32" [
        expects.be:'equal? @[2147483648 square 32]
    ]

    it "grains on square 64" [
        expects.be:'equal? @[9223372036854775808 square 64]
    ]

    it "square 0 is invalid" [
        expects.be:'null? [square 0]
    ]

    it "negative square is invalid" [
        expects.be:'null? [square neg 1]
    ]

    it "square greater than 64 is invalid" [
        expects.be:'null? [square 65]
    ]

    it "returns the total number of grains on the board" [
        expects.be:'equal? @[18446744073709551615 total]
    ]
]
