import.version:1.1.2 {unitt}!
import {src/matching-brackets}!

suite "Matching Brackets"[

    test "paired square brackets" [
        result: paired? "[]"
        assert -> true = result
    ]

    test "empty string" [
        result: paired? ""
        assert -> true = result
    ]

    test "unpaired brackets" [
        result: paired? "[["
        assert -> false = result
    ]

    test "wrong ordered brackets" [
        result: paired? "}{"
        assert -> false = result
    ]

    test "wrong closing bracket" [
        result: paired? "{]"
        assert -> false = result
    ]

    test "paired with whitespace" [
        result: paired? "{ }"
        assert -> true = result
    ]

    test "partially paired brackets" [
        result: paired? "{[])"
        assert -> false = result
    ]

    test "simple nested brackets" [
        result: paired? "{[]}"
        assert -> true = result
    ]

    test "several paired brackets" [
        result: paired? "{}[]"
        assert -> true = result
    ]

    test "paired and nested brackets" [
        result: paired? "([{}({}[])])"
        assert -> true = result
    ]

    test "unopened closing brackets" [
        result: paired? "{[)][]}"
        assert -> false = result
    ]

    test "unpaired and nested brackets" [
        result: paired? "([{])"
        assert -> false = result
    ]

    test "paired and wrong nested brackets" [
        result: paired? "[({]})"
        assert -> false = result
    ]

    test "paired and wrong nested brackets but innermost are correct" [
        result: paired? "[({}])"
        assert -> false = result
    ]

    test "paired and incomplete brackets" [
        result: paired? "{}["
        assert -> false = result
    ]

    test "too many closing brackets" [
        result: paired? "[]]"
        assert -> false = result
    ]

    test "early unexpected brackets" [
        result: paired? ")()"
        assert -> false = result
    ]

    test "early mismatched brackets" [
        result: paired? "{)()"
        assert -> false = result
    ]

    test "math expression" [
        result: paired? "(((185 + 223.85) * 15) - 543)/2"
        assert -> true = result
    ]

    test "complex latex expression" [
        result: paired? "\left(\begin{array}{cc} \frac{1}{3} & x\\ \mathrm{e}^{x} &... x^2 \end{array}\right)"
        assert -> true = result
    ]

]
