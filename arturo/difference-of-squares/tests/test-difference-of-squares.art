import.version:3.0.0 {unitt}! 
import {src/difference-of-squares}!

describe "Difference of Squares"[
    it "square of sum 1" [
        expects.be:'equal? @[1 squareOfSum 1]
    ]

    it "square of sum 5" [
        expects.be:'equal? @[225 squareOfSum 5]
    ]

    it "square of sum 100" [
        expects.be:'equal? @[25502500 squareOfSum 100]
    ]

    it "sum of squares 1" [
        expects.be:'equal? @[1 sumOfSquares 1]
    ]

    it "sum of squares 5" [
        expects.be:'equal? @[55 sumOfSquares 5]
    ]

    it "sum of squares 100" [
        expects.be:'equal? @[338350 sumOfSquares 100]
    ]

    it "difference of squares 1" [
        expects.be:'equal? @[0 differenceOfSquares 1]
    ]

    it "difference of squares 5" [
        expects.be:'equal? @[170 differenceOfSquares 5]
    ]

    it "difference of squares 100" [
        expects.be:'equal? @[25164150 differenceOfSquares 100]
    ]
]
