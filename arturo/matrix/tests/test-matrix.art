import.version:3.0.0 {unitt}! 
import {src/matrix}!

describe "Matrix" [
    describe "Matrix - Row" [
        it "extract row fron one number matrix" [
            expects.be:'equal? @[
                [1]
                row "1" 1
            ]
        ]

        it "can extract row" [
            matrix: {
                1 2
                3 4
            }
            expects.be:'equal? @[
                [3 4]
                row matrix 2
            ]
        ]

        it "extract row where numbers have different widths" [
            matrix: {
                1 2
                10 20
            }
            expects.be:'equal? @[
                [10 20]
                row matrix 2
            ]
        ]

        it "can extract row from non-square matrix with no corresponding column" [
            matrix: {
                1 2 3
                4 5 6
                7 8 9
                8 7 6
            }
            expects.be:'equal? @[
                [8 7 6]
                row matrix 4
            ]
        ]
    ]

    describe "Matrix - Column" [
        it "extract column from one number matrix" [
            expects.be:'equal? @[
                [1]
                column "1" 1
            ]
        ]

        it "can extract column" [
            matrix: {
                1 2 3
                4 5 6
                7 8 9
            }
            expects.be:'equal? @[
                [3 6 9]
                column matrix 3
            ]
        ]

        it "can extract column from non-square matrix with no corresponding row" [
            matrix: {
                1 2 3 4
                5 6 7 8
                9 8 7 6
            }
            expects.be:'equal? @[
                [4 8 6]
                column matrix 4
            ]
        ]

        it "extract column where numbers have different widths" [
            matrix: {
                89 1903 3
                18 3 1
                9 4 800
            }
            expects.be:'equal? @[
                [1903 3 4]
                column matrix 2
            ]
        ]
    ]
]
