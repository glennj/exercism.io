import.version:3.0.0 {unitt}! 
import {src/high-scores}!

describe "High Scores" [
    it "List of scores" [
        expects.be:'equal? @[[30 50 20 70] list [30 50 20 70]]
    ]

    it "Latest score" [
        expects.be:'equal? @[30 latest [100 0 90 30]]
    ]

    it "Personal best" [
        expects.be:'equal? @[100 personalBest [40 100 70]]
    ]

    it "Personal top three from a list of scores" [
        expects.be:'equal? @[
            [100 90 70]
            personalTopThree [10, 30, 90, 30, 100, 20, 10, 0, 30, 40, 40, 70, 70]
        ]
    ]

    it "Personal top highest to lowest" [
        expects.be:'equal? @[[30 20 10] personalTopThree [20 10 30]]
    ]

    it "Personal top when there is a tie" [
        expects.be:'equal? @[[40 40 30] personalTopThree [40 20 40 30]]
    ]

    it "Personal top when there are less than 3" [
        expects.be:'equal? @[[70 30] personalTopThree [30 70]]
    ]

    it "Personal top when there is only one" [
        expects.be:'equal? @[[40] personalTopThree [40]]
    ]
]
