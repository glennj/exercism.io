import.version:3.0.0 {unitt}! 
import {src/reverse-string}!

describe "Reverse String" [
    it "an empty string" [
        expects.be:'equal? @[
            ""
            reverseString ""
        ]
    ]

    it "a word" [
        expects.be:'equal? @[
            "tobor"
            reverseString "robot"
        ]
    ]

    it "a capitalized word" [
        expects.be:'equal? @[
            "nemaR"
            reverseString "Ramen"
        ]
    ]

    it "a sentence with punctuation" [
        expects.be:'equal? @[
            "!yrgnuh m'I"
            reverseString "I'm hungry!"
        ]
    ]

    it "a palindrome" [
        expects.be:'equal? @[
            "racecar"
            reverseString "racecar"
        ]
    ]

    it "an even-sized word" [
        expects.be:'equal? @[
            "reward"
            reverseString "drawer"
        ]
    ]
]
