import.version:3.0.0 {unitt}! 
import {src/acronym}!

describe "Acronym" [
    it "basic" [
        phrase: "Portable Network Graphics"
        expects.be: 'equal? @[
            "PNG"
            abbreviate phrase 
        ]
    ]

    it "lowercase words" [
        phrase: "Ruby on Rails"
        expects.be: 'equal? @[
            "ROR"
            abbreviate phrase 
        ]
    ]

    it "punctuation" [
        phrase: "First In, First Out"
        expects.be: 'equal? @[
            "FIFO"
            abbreviate phrase 
        ]
    ]

    it "all uppercase word" [
        phrase: "GNU Image Manipulation Program"
        expects.be: 'equal? @[
            "GIMP"
            abbreviate phrase 
        ]
    ]

    it "punctuation without whitespace" [
        phrase: "Complementary metal-oxide semiconductor"
        expects.be: 'equal? @[
            "CMOS"
            abbreviate phrase 
        ]
    ]

    it "very long abbreviation" [
        phrase: "Rolling On The Floor Laughing So Hard That My Dogs Came Over And Licked Me"
        expects.be: 'equal? @[
            "ROTFLSHTMDCOALM"
            abbreviate phrase 
        ]
    ]

    it "consecutive delimiters" [
        phrase: "Something - I made up from thin air"
        expects.be: 'equal? @[
            "SIMUFTA"
            abbreviate phrase 
        ]
    ]

    it "apostrophes" [
        phrase: "Halley\'s Comet"
        expects.be: 'equal? @[
            "HC"
            abbreviate phrase 
        ]
    ]

    it "underscore emphasis" [
        phrase: "The Road _Not_ Taken"
        expects.be: 'equal? @[
            "TRNT"
            abbreviate phrase 
        ]
    ]
]
