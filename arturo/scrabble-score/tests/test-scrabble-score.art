import.version:3.0.0 {unitt}! 
import {src/scrabble-score}!

describe "Scrabble Score" [
    it "lowercase letter" [
        expects.be:'equal? @[1 score "a"]
    ]

    it "uppercase letter" [
        expects.be:'equal? @[1 score "A"]
    ]

    it "valuable letter" [
        expects.be:'equal? @[4 score "f"]
    ]

    it "short word" [
        expects.be:'equal? @[2 score "at"]
    ]

    it "short, valuable word" [
        expects.be:'equal? @[12 score "zoo"]
    ]

    it "medium word" [
        expects.be:'equal? @[6 score "street"]
    ]

    it "medium, valuable word" [
        expects.be:'equal? @[22 score "quirky"]
    ]

    it "long, mixed-case word" [
        expects.be:'equal? @[41 score "OxyphenButazone"]
    ]

    it "english-like word" [
        expects.be:'equal? @[8 score "pinata"]
    ]

    it "empty input" [
        expects.be:'equal? @[0 score ""]
    ]

    it "entire alphabet available" [
        expects.be:'equal? @[87 score "abcdefghijklmnopqrstuvwxyz"]
    ]
]
