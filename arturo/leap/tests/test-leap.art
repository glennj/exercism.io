import.version:3.0.0 {unitt}! 
import {src/leap}!

describe "Leap" [
    it "a year not divisible by 4 is a common year" [
        expects.be:'false? @[isLeap? 2015]
    ]

    it "a year divisible by 2 and not divisible by 4 is a common year" [
        expects.be:'false? @[isLeap? 1970]
    ]

    it "a year divisible by 4 and not divisible by 100 is a leap year" [
        expects.be:'true? @[isLeap? 1996]
    ]

    it "a year divisible by 4 and 5 is still a leap year" [
        expects.be:'true? @[isLeap? 1960]
    ]
    
    it "a year divisible by 100 and not divisible by 400 is a common year" [
        expects.be:'false? @[isLeap? 2100]
    ]
    
    it "a year divisible by 100 but not divisible by 3 is still not a leap year" [
        expects.be:'false? @[isLeap? 1900]
    ]
    
    it "a year divisible by 400 is a leap year" [
        expects.be:'true? @[isLeap? 2000]
    ]
    
    it "a year divisible by 400 but not by 125 is still a leap year" [
        expects.be:'true? @[isLeap? 2400]
    ]
    
    it "a year divisible by 200 and not divisible by 400 is a common year" [
        expects.be:'false? @[isLeap? 1800]
    ]
]
