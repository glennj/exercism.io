import.version:2.0.1 {unitt}!
import {src/strain}!

suite "Strain" [
    test "keep on empty list returns empty list" [
        values: []
        predicate: $[x] -> true
        results: keep values 'predicate
        expected: []
        assert -> expected = results
    ]

    test "keeps everything" [
        values: [1 3 5]
        predicate: $[x] -> true
        results: keep values 'predicate
        expected: [1 3 5]
        assert -> expected = results
    ]

    test "keeps nothing" [
        values: [1 3 5]
        predicate: $[x] -> false
        results: keep values 'predicate
        expected: []
        assert -> expected = results
    ]

    test "keeps first and last" [
        values: [1 2 3]
        results: keep values 'odd?
        expected: [1 3]
        assert -> expected = results
    ]

    test "keeps neither first nor last" [
        values: [1 2 3]
        results: keep values 'even?
        expected: [2]
        assert -> expected = results
    ]

    test "keeps strings" [
        values: ["apple" "zebra" "banana" "zombies" "cherimoya" "zealot"]
        predicate: $[x] -> prefix? x "z"
        results: keep values 'predicate
        expected: ["zebra" "zombies" "zealot"]
        assert -> expected = results
    ]

    test "keeps lists" [
        values: [[1 2 3]
                 [5 5 5]
                 [5 1 2]
                 [2 1 2]
                 [1 5 2]
                 [2 2 1]
                 [1 2 5]]
        predicate: $[x] -> contains? x 5
        results: keep values 'predicate
        expected: [[5 5 5]
                   [5 1 2]
                   [1 5 2]
                   [1 2 5]]
        assert -> expected = results
    ]

    test "discard on empty list returns empty list" [
        values: []
        predicate: $[x] -> true
        results: discard values 'predicate
        expected: []
        assert -> expected = results
    ]

    test "discards everything" [
        values: [1 3 5]
        predicate: $[x] -> true
        results: discard values 'predicate
        expected: []
        assert -> expected = results
    ]

    test "discards nothing" [
        values: [1 3 5]
        predicate: $[x] -> false
        results: discard values 'predicate
        expected: [1 3 5]
        assert -> expected = results
    ]

    test "discards first and last" [
        values: [1 2 3]
        results: discard values 'odd?
        expected: [2]
        assert -> expected = results
    ]

    test "discards neither first nor last" [
        values: [1 2 3]
        results: discard values 'even?
        expected: [1 3]
        assert -> expected = results
    ]

    test "discards strings" [
        values: ["apple" "zebra" "banana" "zombies" "cherimoya" "zealot"]
        predicate: $[x] -> prefix? x "z"
        results: discard values 'predicate
        expected: ["apple" "banana" "cherimoya"]
        assert -> expected = results
    ]

    test "discards lists" [
        values: [[1 2 3]
                 [5 5 5]
                 [5 1 2]
                 [2 1 2]
                 [1 5 2]
                 [2 2 1]
                 [1 2 5]]
        predicate: $[x] -> contains? x 5
        results: discard values 'predicate
        expected: [[1 2 3]
                   [2 1 2]
                   [2 2 1]]
        assert -> expected = results
    ]
]
