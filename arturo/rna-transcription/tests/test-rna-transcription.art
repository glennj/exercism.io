import.version:3.0.0 {unitt}! 
import {src/rna-transcription}!

describe "RNA Transcription" [
    it "Empty RNA sequence" [
        expects.be:'equal? @[
            ""
            toRna ""
        ]
    ]

    it "RNA complement of cytosine is guanine" [
        expects.be:'equal? @[
            "G"
            toRna "C"
        ]
    ]

    it "RNA complement of guanine is cytosine" [
        expects.be:'equal? @[
            "C"
            toRna "G"
        ]
    ]

    it "RNA complement of thymine is adenine" [
        expects.be:'equal? @[
            "A"
            toRna "T"
        ]
    ]

    it "RNA complement of adenine is uracil" [
        expects.be:'equal? @[
            "U"
            toRna "A"
        ]
    ]

    it "RNA complement" [
        expects.be:'equal? @[
            "UGCACCAGAAUU"
            toRna "ACGTGGTCTTAA"
        ]
    ]
]
