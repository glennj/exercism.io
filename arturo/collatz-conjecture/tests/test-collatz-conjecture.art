import.version:3.0.0 {unitt}! 
import {src/collatz-conjecture}!

describe "Collatz Conjecture"[
    it "zero steps for one" [
        expects.be:'equal? @[0 collatz 1]
    ]

    it "large number of even and odd steps" [
        expects.be:'equal? @[152 collatz 1000000]
    ]

    it "even and odd steps" [
        expects.be:'equal? @[9 collatz 12]
    ]

    it "divide if even" [
        expects.be:'equal? @[4 collatz 16]
    ]

    it "zero is an error" [
        expects.be:'null? @[collatz 0]
    ]

    it "negative value is an error" [
        expects.be:'null? @[collatz neg 15]
    ]
]
