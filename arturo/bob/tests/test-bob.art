import.version:3.0.0 {unitt}! 
import {src/bob}!

describe "Bob" [
    it "stating something" [
        expects.be:'equal? @[
            "Whatever."
            response "Tom-ay-to, tom-aaaah-to."
        ]
    ]

    it "shouting" [
        expects.be:'equal? @[
            "Whoa, chill out!"
            response "WATCH OUT!"
        ]
    ]

    it "shouting gibberish" [
        expects.be:'equal? @[
            "Whoa, chill out!"
            response "FCECDFCAAB"
        ]
    ]

    it "asking a question" [
        expects.be:'equal? @[
            "Sure."
            response "Does this cryogenic chamber make me look fat?"
        ]
    ]

    it "asking a numeric question" [
        expects.be:'equal? @[
            "Sure."
            response "You are, what, like 15?"
        ]
    ]

    it "asking gibberish" [
        expects.be:'equal? @[
            "Sure."
            response "fffbbcbeab?"
        ]
    ]

    it "talking forcefully" [
        expects.be:'equal? @[
            "Whatever."
            response "Let's go make out behind the gym!"
        ]
    ]

    it "using acronyms in regular speech" [
        expects.be:'equal? @[
            "Whatever."
            response "It's OK if you don't want to go to the DMV."
        ]
    ]

    it "forceful question" [
        expects.be:'equal? @[
            "Calm down, I know what I'm doing!"
            response "WHAT THE HELL WERE YOU THINKING?"
        ]
    ]

    it "shouting numbers" [
        expects.be:'equal? @[
            "Whoa, chill out!"
            response "1, 2, 3 GO!"
        ]
    ]

    it "no letters" [
        expects.be:'equal? @[
            "Whatever."
            response "1, 2, 3"
        ]
    ]

    it "question with no letters" [
        expects.be:'equal? @[
            "Sure."
            response "4?"
        ]
    ]

    it "shouting with special characters" [
        expects.be:'equal? @[
            "Whoa, chill out!"
            response "ZOMG THE %^*@#$(*^ ZOMBIES ARE COMING!!11!!1!"
        ]
    ]

    it "shouting with no exclamation mark" [
        expects.be:'equal? @[
            "Whoa, chill out!"
            response "I HATE YOU"
        ]
    ]

    it "statement containing question mark" [
        expects.be:'equal? @[
            "Whatever."
            response "Ending with ? means a question."
        ]
    ]

    it "non-letters with question" [
        expects.be:'equal? @[
            "Sure."
            response ":) ?"
        ]
    ]

    it "prattling on" [
        expects.be:'equal? @[
            "Sure."
            response "Wait! Hang on. Are you going to be OK?"
        ]
    ]

    it "silence" [
        expects.be:'equal? @[
            "Fine. Be that way!"
            response ""
        ]
    ]

    it "prolonged silence" [
        expects.be:'equal? @[
            "Fine. Be that way!"
            response "    "
        ]
    ]

    it "alternate silence" [
        expects.be:'equal? @[
            "Fine. Be that way!"
            response "\t\t\t\t\t\t\t\t\t\t"
        ]
    ]

    it "starting with whitespace" [
        expects.be:'equal? @[
            "Whatever."
            response "         hmmmmmmm..."
        ]
    ]

    it "ending with whitespace" [
        expects.be:'equal? @[
            "Sure."
            response "Okay if like my  spacebar  quite a bit?   "
        ]
    ]

    it "other whitespace" [
        expects.be:'equal? @[
            "Fine. Be that way!"
            response "\n\r \t"
        ]
    ]

    it "non-question ending with whitespace" [
        expects.be:'equal? @[
            "Whatever."
            response "This is a statement ending with whitespace      "
        ]
    ]

    it "multiple line question" [
        expects.be:'equal? @[
            "Sure."
            response "\nDoes this cryogenic chamber make\n me look fat?"
        ]
    ]
]
