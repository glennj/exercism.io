import.version:3.0.0 {unitt}! 
import {src/two-fer}!

describe "Two Fer" [
    it "no name given" [
        expects.be:'equal? @[
            "One for you, one for me."
            twoFer ""
        ]
    ]

    it "a name given" [
        expects.be:'equal? @[
            "One for Alice, one for me."
            twoFer "Alice"
        ]
    ]
    
    it "another name given" [
        expects.be:'equal? @[
            "One for Bob, one for me."
            twoFer "Bob"
        ]
    ]
]
