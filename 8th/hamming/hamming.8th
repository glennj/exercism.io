\ two strings must be the same length
: valid-lengths?  \ s1 s2 -- s1 s2 T
  s:len rot s:len rot
  n:= _swap
  ;

\ increment the diff count if x1 != x2
: hamming-counter   \ n x1 x2 --
  s:= !if r> n:1+ >r then
  drop    \ drops n
  ;

: distance \ s1 s2 -- n
  valid-lengths? !if 2drop null ;; then

  null s:/
  swap null s:/
  0 >r
  ' hamming-counter a:2each
  2drop
  r>
  ;
